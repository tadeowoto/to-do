doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title user-auth
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css", rel="stylesheet")
  body(class="bg-gray-900 text-white")
    .container(class="mx-auto px-4 py-12")
      h1(class="text-center text-4xl font-bold text-gray-100 mb-10") user-auth
      
      .flex(class="flex-col md:flex-row gap-10 items-center justify-center")
        
        div(class="bg-gray-800 p-8 rounded-lg shadow-lg flex flex-col")
          h2(class="text-2xl font-semibold mb-6 text-gray-100") Iniciar Sesi칩n
          form(action="/login" method="POST")
            .mb-4
              label(for="login-username" class="block text-sm font-medium mb-1") Nombre de usuario
              input(id="login-username" type="text" name="username" class="w-full px-3 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
            .mb-4
              label(for="login-password" class="block text-sm font-medium mb-1") Contrase침a
              input(id="login-password" type="password" name="password" class="w-full px-3 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
            button(type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg") Iniciar Sesi칩n

        
        div(class="bg-gray-800 p-8 rounded-lg shadow-lg flex flex-col")
          h2(class="text-2xl font-semibold mb-6 text-gray-100") Registrarse
          form(action="/register" method="POST")
            .mb-4
              label(for="register-username" class="block text-sm font-medium mb-1") Nombre de usuario
              input(id="register-username" type="text" name="username" class="w-full px-3 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
            .mb-4
              label(for="register-password" class="block text-sm font-medium mb-1") Contrase침a
              input(id="register-password" type="password" name="password" class="w-full px-3 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
            button(type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg") Registrarse



